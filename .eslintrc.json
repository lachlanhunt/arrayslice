{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
		"jasmine": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
		"ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
		"no-mixed-spaces-and-tabs": [
			"error",
			"smart-tabs"
		],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
